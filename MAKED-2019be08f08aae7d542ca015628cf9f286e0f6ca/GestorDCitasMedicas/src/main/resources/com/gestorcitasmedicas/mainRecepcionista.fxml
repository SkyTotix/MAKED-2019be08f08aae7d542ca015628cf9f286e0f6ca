                           <VBox spacing="2">
                              <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Consultas concluidas" textFill="WHITE" />
                              <Label fx:id="consultasConcluidasLabel" style="-fx-font-weight: bold; -fx-font-size: 24;" text="8" textFill="WHITE" />
                           </VBox>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Consultas Reprogramadas -->
                  <VBox minWidth="250" prefHeight="70" prefWidth="280" style="-fx-background-color: #7b9dbf; -fx-background-radius: 5;">
                     <padding>
                        <Insets bottom="10" left="15" right="15" top="10" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <ImageView fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@img/cal.png" />
