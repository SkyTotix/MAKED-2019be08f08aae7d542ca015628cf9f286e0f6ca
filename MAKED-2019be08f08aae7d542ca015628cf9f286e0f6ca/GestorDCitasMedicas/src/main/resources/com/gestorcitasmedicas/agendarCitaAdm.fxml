<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #16191C;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.AgendarCitaController">
   <top>
      <Pane prefHeight="107.0" prefWidth="1366.0" style="-fx-background-color: #E7ECF0;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="101.0" fitWidth="73.0" layoutX="14.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/cross.png" />
               </image>
            </ImageView>
            <Button fx:id="btnPerfil" layoutX="1183.0" layoutY="21.0" mnemonicParsing="false" prefHeight="66.0" prefWidth="165.0" style="-fx-background-color: #E7ECF0;" onAction="#abrirPerfil">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="153.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/miPerfil.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
   </top>
   <left>
      <VBox fx:id="menuLateral" style="-fx-background-color: #3B6F89;" prefWidth="60" minWidth="60" maxWidth="200" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="15" right="8" bottom="15" left="8" />
         </padding>
         <children>
            <!-- Gestion Usuarios -->
            <VBox fx:id="menuItemUsuarios" style="-fx-background-color: #3B6F89; -fx-background-radius: 5; -fx-cursor: hand;" spacing="3" alignment="CENTER">
               <padding>
                  <Insets top="8" right="8" bottom="8" left="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/iper.png" />
                     </image>
                  </ImageView>
                  <Label text="Gestion Usuarios" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" visible="false" managed="false" />
               </children>
            </VBox>
            
            <!-- Gestion Medicos -->
            <VBox fx:id="menuItemMedicos" style="-fx-background-color: #3B6F89; -fx-background-radius: 5; -fx-cursor: hand;" spacing="3" alignment="CENTER">
               <padding>
                  <Insets top="8" right="8" bottom="8" left="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/imed.png" />
                     </image>
                  </ImageView>
                  <Label text="Gestion Medicos" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" visible="false" managed="false" />
               </children>
            </VBox>
            
            <!-- Gestion Citas -->
            <VBox fx:id="menuItemCitas" style="-fx-background-color: #4A7A9A; -fx-background-radius: 5; -fx-cursor: hand;" spacing="3" alignment="CENTER">
               <padding>
                  <Insets top="8" right="8" bottom="8" left="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/ical.png" />
                     </image>
                  </ImageView>
                  <Label text="Gestion Citas" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" visible="false" managed="false" />
               </children>
            </VBox>
            
            <!-- Salir -->
            <VBox fx:id="menuItemSalir" style="-fx-background-color: #3B6F89; -fx-background-radius: 5; -fx-cursor: hand;" spacing="3" alignment="CENTER">
               <padding>
                  <Insets top="8" right="8" bottom="8" left="8" />
               </padding>
               <children>
                  <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/iexit.png" />
                     </image>
                  </ImageView>
                  <Label text="Salir" style="-fx-text-fill: white; -fx-font-size: 11; -fx-font-weight: bold;" visible="false" managed="false" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
         <VBox spacing="20" style="-fx-background-color: #FFFFFF;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
               <!-- Título -->
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <ImageView fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/ical.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="lblTitulo" text="Agendar Cita Médica" style="-fx-font-weight: bold; -fx-font-size: 24; -fx-text-fill: #3B6F89;" />
               </HBox>
               
               <!-- Formulario de cita -->
               <VBox spacing="15" style="-fx-background-color: #F8F9FA; -fx-padding: 20; -fx-background-radius: 10;">
                  <children>
                     <!-- Primera fila: Paciente y Médico -->
                     <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="5" prefWidth="300">
                           <Label text="Paciente:" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                           <ComboBox fx:id="comboPaciente" promptText="Seleccionar paciente" prefWidth="280" />
                        </VBox>
                        
                        <VBox spacing="5" prefWidth="300">
                           <Label text="Médico:" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                           <ComboBox fx:id="comboMedico" promptText="Seleccionar médico" prefWidth="280" />
                        </VBox>
                     </HBox>
                     
                     <!-- Segunda fila: Fecha y Hora -->
                     <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="5" prefWidth="300">
                           <Label text="Fecha:" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                           <DatePicker fx:id="datePicker" promptText="Seleccionar fecha" prefWidth="280" />
                        </VBox>
                        
                        <VBox spacing="5" prefWidth="300">
                           <Label text="Horario:" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                           <ComboBox fx:id="comboHorario" promptText="Seleccionar horario" prefWidth="280" />
                        </VBox>
                     </HBox>
                     
                     <!-- Tercera fila: Motivo de la cita -->
                     <VBox spacing="5">
                        <Label text="Motivo de la cita:" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #3B6F89;" />
                        <TextArea fx:id="txtMotivo" promptText="Describa el motivo de la cita..." prefHeight="100" wrapText="true" />
                     </VBox>
                     
                     <!-- Calendario de disponibilidad -->
                     <VBox spacing="10">
                        <Label text="Calendario de Disponibilidad:" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #3B6F89;" />
                        <HBox spacing="20" alignment="CENTER_LEFT">
                           <VBox spacing="10">
                                                          <HBox spacing="10" alignment="CENTER">
                              <Button fx:id="btnMesAnterior" text="&lt;" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#mesAnterior" />
                              <Label fx:id="lblTituloCalendario" text="Calendario" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #3B6F89;" />
                              <Button fx:id="btnMesSiguiente" text="&gt;" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#mesSiguiente" />
                           </HBox>
                          <GridPane fx:id="gridCalendario" hgap="2" vgap="2">
                             <!-- Los días se agregarán dinámicamente -->
                          </GridPane>
                           </VBox>
                           
                           <!-- Leyenda de disponibilidad -->
                           <VBox spacing="10" style="-fx-background-color: #E7ECF0; -fx-padding: 15; -fx-background-radius: 5;">
                              <Label text="Leyenda:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                              <HBox spacing="10" alignment="CENTER_LEFT">
                                 <Circle radius="8" fill="#FF6B6B" />
                                 <Label text="Sin disponibilidad" style="-fx-font-size: 12;" />
                              </HBox>
                              <HBox spacing="10" alignment="CENTER_LEFT">
                                 <Circle radius="8" fill="#4ECDC4" />
                                 <Label text="Disponible" style="-fx-font-size: 12;" />
                              </HBox>
                           </VBox>
                        </HBox>
                     </VBox>
                  </children>
               </VBox>
               
               <!-- Botones de acción -->
               <HBox spacing="15" alignment="CENTER_RIGHT">
                  <Button fx:id="btnCancelar" text="Cancelar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" onAction="#cancelarCita" />
                  <Button fx:id="btnActualizar" text="Actualizar" style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" onAction="#actualizarCita" visible="false" />
                  <Button fx:id="btnAgendar" text="Agendar Cita" style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" onAction="#agendarCita" />
               </HBox>
               
               <!-- Botón de regreso al menú principal -->
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Button fx:id="btnVolverMenu" text="← Volver al Menú Principal" 
                          style="-fx-background-color: #3B6F89; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 5; -fx-padding: 10 20;" 
                          onAction="#volverAlMenuPrincipal" />
               </HBox>
            </children>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
