<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="500.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.AgregarUsuarioController">
   <top>
      <VBox style="-fx-background-color: #3B6F89;" spacing="10">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <Label text="Agregar Nuevo Usuario" style="-fx-font-weight: bold; -fx-font-size: 20; -fx-text-fill: white;" />
            <Label text="Complete todos los campos requeridos" style="-fx-font-size: 14; -fx-text-fill: #E7ECF0;" />
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #FFFFFF;">
         <VBox spacing="15" style="-fx-background-color: #FFFFFF;">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
               <!-- Nombre Completo -->
               <VBox spacing="5">
                  <Label text="Nombre Completo *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <TextField fx:id="txtNombre" promptText="Ingrese el nombre completo" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- CURP -->
               <VBox spacing="5">
                  <Label text="CURP *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <TextField fx:id="txtCurp" promptText="Ingrese el CURP" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Teléfono -->
               <VBox spacing="5">
                  <Label text="Teléfono *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <TextField fx:id="txtTelefono" promptText="Ingrese el número de teléfono" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Tipo de Usuario -->
               <VBox spacing="5">
                  <Label text="Tipo de Usuario *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <ComboBox fx:id="cboTipo" promptText="Seleccione el tipo de usuario" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Matrícula o Número de Empleado -->
               <VBox spacing="5">
                  <Label text="Matrícula o Número de Empleado *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <TextField fx:id="txtMatricula" promptText="Ingrese la matrícula o número de empleado" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Correo Electrónico -->
               <VBox spacing="5">
                  <Label text="Correo Electrónico *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <TextField fx:id="txtCorreo" promptText="ejemplo@utez.edu.mx" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Contraseña -->
               <VBox spacing="5">
                  <Label text="Contraseña *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <PasswordField fx:id="txtContrasena" promptText="Ingrese la contraseña" style="-fx-font-size: 14;" />
               </VBox>
               
               <!-- Confirmar Contraseña -->
               <VBox spacing="5">
                  <Label text="Confirmar Contraseña *" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <PasswordField fx:id="txtConfirmarContrasena" promptText="Confirme la contraseña" style="-fx-font-size: 14;" />
               </VBox>
            </children>
         </VBox>
      </ScrollPane>
   </center>
   <bottom>
      <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #F5F5F5;">
         <padding>
            <Insets top="15" right="20" bottom="15" left="20" />
         </padding>
         <children>
            <Button fx:id="btnCancelar" text="Cancelar" style="-fx-background-color: #787A7D; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" onAction="#cancelar" />
            <Button fx:id="btnGuardar" text="Guardar Usuario" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" onAction="#guardarUsuario" defaultButton="true" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
