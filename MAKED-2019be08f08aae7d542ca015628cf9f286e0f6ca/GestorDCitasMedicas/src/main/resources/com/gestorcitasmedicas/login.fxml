<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600" minWidth="1000" prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorcitasmedicas.controller.LoginController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
         <HBox alignment="CENTER" minWidth="800" spacing="50">
            <ImageView fitHeight="832.0" fitWidth="851.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/log.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" maxWidth="450" minWidth="300" prefHeight="500.0" prefWidth="333.0" spacing="15" style="-fx-background-color: #FFFFFF;">
         <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
         </padding>
         <children>
            <ImageView fitHeight="93.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/cross.png" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" />
            <Label alignment="CENTER" text="Bienvenido">
               <font>
                  <Font name="Calibri Bold" size="18.0" />
               </font>
            </Label>
            <VBox spacing="8">
               <Label text="Correo:" />
               <TextField fx:id="correoIngresar" promptText="Ingresa tu correo" style="-fx-background-color: #B9C3D5; -fx-background-radius: 5;" />
            </VBox>
            <VBox spacing="8">
               <Label text="Contraseña:" />
               <PasswordField fx:id="contraIngresar" promptText="Ingresa tu contraseña" style="-fx-background-color: #B9C3D5; -fx-background-radius: 5;" />
            </VBox>
            <Label fx:id="olvidoContra" alignment="CENTER" style="-fx-text-fill: #3868fb; -fx-underline: true; -fx-cursor: hand;" text="¿Has olvidado tu contraseña?">
               <font>
                  <Font name="Calibri Italic" size="10.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#iniciarSesion" style="-fx-background-color: #3B6F89; -fx-background-radius: 5;" text="Iniciar Sesión" textFill="WHITE">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <HBox alignment="CENTER" spacing="5">
               <Label text="¿No tienes cuenta?" />
               <Label fx:id="crearCuenta" style="-fx-text-fill: #3868fb; -fx-underline: true; -fx-cursor: hand;" text="¡Crea una ahora!" />
            </HBox>
         </children>
      </VBox>
      </HBox>
   </ScrollPane>
   </center>
</BorderPane>
