<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<DialogPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox prefHeight="200.0" prefWidth="400.0" spacing="15.0">
         <children>
            <Label text="Cambiar Contraseña" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
            
            <Label text="Contraseña Actual:" />
            <PasswordField fx:id="txtContrasenaActual" promptText="Ingrese su contraseña actual" />
            
            <Label text="Nueva Contraseña:" />
            <PasswordField fx:id="txtNuevaContrasena" promptText="Ingrese la nueva contraseña" />
            
            <Label text="Confirmar Nueva Contraseña:" />
            <PasswordField fx:id="txtConfirmarContrasena" promptText="Confirme la nueva contraseña" />
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
               <children>
                  <Button text="Cancelar" onAction="#cancelarCambio" style="-fx-background-color: #787A7D; -fx-text-fill: white;" />
                  <Button text="Cambiar" onAction="#confirmarCambio" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" defaultButton="true" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</DialogPane>
